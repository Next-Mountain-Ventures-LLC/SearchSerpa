---
import { buttonVariants } from "@/components/ui/button";
---

<script>
  // Add event listeners for audit buttons
  document.addEventListener('DOMContentLoaded', () => {
    // Function to scroll to the site audit section
    const scrollToAuditSection = () => {
      document.getElementById('site-audit-section')?.scrollIntoView({ 
        behavior: 'smooth',
        block: 'start'  // Align the top of the element with the top of the viewport
      });
      
      // Add extra offset to account for fixed header
      setTimeout(() => {
        window.scrollBy(0, -100); // Scroll up a bit to show the title text
      }, 500); // Wait for the initial scroll to complete
    };

    // Add event listeners to all audit buttons
    document.getElementById('nav-audit-btn')?.addEventListener('click', scrollToAuditSection);
    document.getElementById('mobile-audit-btn')?.addEventListener('click', scrollToAuditSection);
  });
</script>

<header
  class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <div
    class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
    <div class="flex gap-6 md:gap-10">
      <a href="/" class="flex items-center space-x-2">
        <span class="inline-block font-bold text-xl text-foreground">Search<span class="text-primary">Serpa</span></span>
      </a>
    </div>
    <div class="flex flex-1 items-center justify-end space-x-4">
      <nav class="hidden md:flex items-center space-x-1">
        <a
          href="#services"
          class="text-sm font-medium text-muted-foreground px-3 py-2 hover:text-foreground transition-colors"
        >
          Services
        </a>
        <a
          href="#why-different"
          class="text-sm font-medium text-muted-foreground px-3 py-2 hover:text-foreground transition-colors"
        >
          Why We're Different
        </a>
        <a
          href="#pricing"
          class="text-sm font-medium text-muted-foreground px-3 py-2 hover:text-foreground transition-colors"
        >
          Pricing
        </a>
        <button
          id="nav-audit-btn"
          class={buttonVariants({ variant: 'default' })}
        >
          Get Free Audit
        </button>
      </nav>
      <button
        id="mobile-audit-btn"
        class={`md:hidden ${buttonVariants({ variant: 'default', size: 'sm' })}`}
      >
        Get Free Audit
      </button>
    </div>
  </div>
</header>
