---
import { buttonVariants } from "@/components/ui/button";
import MobileMenu from "@/components/MobileMenu.astro";
---

<script is:inline>
  // Add event listeners for audit buttons and ensure header elements are visible
  document.addEventListener('DOMContentLoaded', () => {
    // Force logo and menu button visibility
    const logo = document.querySelector('header .text-xl');
    const menuButton = document.getElementById('mobile-menu-toggle');
    
    if (logo) {
      logo.style.visibility = 'visible';
      logo.style.display = 'inline-block';
      console.log('Made logo visible:', logo);
    }
    
    if (menuButton) {
      menuButton.style.visibility = 'visible';
      menuButton.style.display = 'flex';
      console.log('Made menu button visible:', menuButton);
    }
    // Function to scroll to the site audit section
    const scrollToAuditSection = (e) => {
      if (e) e.preventDefault();
      
      // Get the header height to use as offset
      const headerHeight = document.querySelector('header')?.offsetHeight || 64;
      const targetElement = document.getElementById('site-audit-section');
      
      if (targetElement) {
        const elementPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
        
        // Scroll to element with header height offset
        window.scrollTo({
          top: elementPosition - headerHeight - 20, // 20px extra padding
          behavior: 'smooth'
        });
      }
    };

    // Add event listeners to all audit buttons
    document.getElementById('nav-audit-btn')?.addEventListener('click', scrollToAuditSection);
    
    // Expose scrollToAuditSection function to window for React components
    window.scrollToAuditSection = scrollToAuditSection;
  });
</script>

<header
  class="bg-white sticky top-0 z-50 w-full border-b shadow-sm !visible"
>
  <div
    class="container flex h-16 items-center justify-between !visible"
  >
    <!-- Logo Section -->
    <div class="flex gap-6 md:gap-10 !visible">
      <a href="/" class="flex items-center space-x-2 !visible">
        <span class="inline-block font-bold text-xl text-black !visible">Search<span class="text-primary !visible">Serpa</span></span>
      </a>
    </div>

    <!-- Navigation Section -->
    <div class="flex items-center space-x-4 !visible">
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-1">
        <a
          href="#services"
          class="text-sm font-medium text-muted-foreground px-3 py-2 hover:text-foreground transition-colors"
        >
          Services
        </a>
        <a
          href="#why-different"
          class="text-sm font-medium text-muted-foreground px-3 py-2 hover:text-foreground transition-colors"
        >
          Why We're Different
        </a>
        <a
          href="#pricing"
          class="text-sm font-medium text-muted-foreground px-3 py-2 hover:text-foreground transition-colors"
        >
          Pricing
        </a>
        <button
          id="nav-audit-btn"
          class={buttonVariants({ variant: 'default' })}
        >
          Get Free Audit
        </button>
        <a
          href="https://nxtmt.bloom.io/login"
          target="_blank"
          rel="noopener noreferrer"
          class={buttonVariants({ variant: 'outline' })}
        >
          Login
        </a>
      </nav>

      <!-- Mobile Menu Toggle Button -->
      <MobileMenu />
    </div>
  </div>
</header>
