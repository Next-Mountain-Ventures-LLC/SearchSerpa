---
import { buttonVariants } from "@/components/ui/button";
import MobileMenu from "@/components/MobileMenu";
---

<script>
  // Add event listeners for navigation
  document.addEventListener('DOMContentLoaded', () => {
    // Function to scroll to a section by ID
    const scrollToSection = (sectionId, e) => {
      if (e) e.preventDefault();
      
      // Get the header height to use as offset
      const headerHeight = document.querySelector('header')?.offsetHeight || 64;
      const targetElement = document.getElementById(sectionId);
      
      if (targetElement) {
        const elementPosition = targetElement.getBoundingClientRect().top + window.pageYOffset;
        
        // Scroll to element with header height offset
        window.scrollTo({
          top: elementPosition - headerHeight - 20, // 20px extra padding
          behavior: 'smooth'
        });
      }
    };

    // Function to handle home page hash navigation
    const handleNavigation = () => {
      // Check if we're on the homepage
      const isHomePage = window.location.pathname === '/' || window.location.pathname === '';
      
      // If we're on the homepage and there's a hash in the URL
      if (isHomePage && window.location.hash) {
        // Get the section ID from the hash (remove the #)
        const sectionId = window.location.hash.substring(1);
        
        // Scroll to the section after a small delay to ensure the page is loaded
        setTimeout(() => {
          scrollToSection(sectionId);
        }, 100);
      }
    };

    // Run once when the page loads
    handleNavigation();

    // Add event listener for when the hash changes
    window.addEventListener('hashchange', handleNavigation);
    
    // Expose scrollToSection function to window for React components
    window.scrollToAuditSection = () => scrollToSection('site-audit-section');

    // Add click handlers to all header navigation links that point to homepage sections
    document.querySelectorAll('header nav a[href^="/#"]').forEach(link => {
      link.addEventListener('click', (e) => {
        // If we're already on the homepage
        if (window.location.pathname === '/' || window.location.pathname === '') {
          e.preventDefault();
          const sectionId = link.getAttribute('href').split('#')[1];
          scrollToSection(sectionId);
        }
        // Otherwise, let the link navigate normally to homepage with hash
      });
    });
  });
</script>

<header
  class="bg-background/95 supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50 w-full border-b backdrop-blur"
>
  <div
    class="container flex h-16 items-center space-x-4 sm:justify-between sm:space-x-0"
  >
