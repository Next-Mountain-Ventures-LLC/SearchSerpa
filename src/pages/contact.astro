---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { Mail, Phone, MapPin } from "lucide-react";
---

<BaseLayout
  title="Contact Us | SearchSerpa"
  description="Get in touch with SearchSerpa for questions about our SEO and content marketing services."
>
  <section class="py-12 md:py-20 bg-background">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl md:text-4xl font-bold text-center mb-8">Contact Us</h1>
        <p class="text-lg text-center text-muted-foreground mb-12 max-w-2xl mx-auto">
          Have questions about our services or want to discuss your SEO strategy? 
          We'd love to hear from you. Fill out the form below and our team will get back to you shortly.
        </p>
        
        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <div class="bg-white p-6 rounded-lg shadow-sm border border-border flex flex-col items-center text-center">
            <div class="bg-primary/10 p-3 rounded-full mb-4">
              <Mail class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-lg font-semibold mb-2">Email Us</h3>
            <p class="text-muted-foreground mb-3">We aim to respond within 24 hours on business days.</p>
            <a href="mailto:info@searchserpa.com" class="text-primary font-medium">info@searchserpa.com</a>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm border border-border flex flex-col items-center text-center">
            <div class="bg-primary/10 p-3 rounded-full mb-4">
              <Phone class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-lg font-semibold mb-2">Call Us</h3>
            <p class="text-muted-foreground mb-3">Available Monday-Friday, 9am-5pm CST.</p>
            <a href="tel:+18005551234" class="text-primary font-medium">(800) 555-1234</a>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm border border-border flex flex-col items-center text-center">
            <div class="bg-primary/10 p-3 rounded-full mb-4">
              <MapPin class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-lg font-semibold mb-2">Visit Us</h3>
            <p class="text-muted-foreground mb-3">Our headquarters location.</p>
            <address class="not-italic text-primary font-medium">
              123 SEO Street<br />
              Chicago, IL 60601
            </address>
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md border border-border">
          <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
          
          <form 
            class="space-y-6" 
            method="POST" 
            action="https://api.new.website/api/submit-form/"
            encType="multipart/form-data"
          >
            <input type="hidden" name="form_name" value="Contact Form" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label for="name" class="block text-sm font-medium">
                  Full Name
                </label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20"
                />
              </div>
              
              <div class="space-y-2">
                <label for="email" class="block text-sm font-medium">
                  Email Address
                </label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20"
                />
              </div>
            </div>
            
            <div class="space-y-2">
              <label for="subject" class="block text-sm font-medium">
                Subject
              </label>
              <input
                id="subject"
                name="subject"
                type="text"
                required
                class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20"
              />
            </div>
            
            <div class="space-y-2">
              <label for="message" class="block text-sm font-medium">
                Your Message
              </label>
              <textarea
                id="message"
                name="message"
                rows={6}
                required
                class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-primary/20"
              ></textarea>
            </div>
            
            <div>
              <Button
                type="submit"
                className="w-full md:w-auto bg-primary hover:bg-primary/90 text-white"
              >
                Send Message
              </Button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>